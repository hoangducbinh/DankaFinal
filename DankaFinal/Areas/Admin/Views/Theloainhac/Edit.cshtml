@model DankaFinal.Models.theloai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}








<div class="content">
    <div class="container-fluid">
        <div class="row" style="margin-left: 600px;">
            <div class="col-lg-24">
                <div class="card">
                    <div class="card-body">


                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Sửa tên thể loại</h4>

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.maTl)

                            <div class="form-group">

                                <div class="col-md-10" style="text-align:center">
                                    @Html.EditorFor(model => model.tenTheloai, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.tenTheloai, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10" style="text-align:center">
                                    <input type="submit" value="Save" class="btn btn-info" />

                                    <a href="@Url.Action("Index", "Khoahocedm")" class="btn btn-primary" style="width: 70px; background-color: darkblue; border-color: cornsilk; " role="button">Thoát</a>

                                </div>
                            </div>
                        </div>
                        }

                        










                    </div>
                </div>


            </div>

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</div>









