@model IEnumerable<DankaFinal.Models.Khoahocedm>





@{
    ViewBag.Title = "Khoahocedm";

}

@foreach (var item in Model)
{
    <div class="grid_1_of_4 images_1_of_4" >

        <a href="@Url.Action("Chitietkhoahoc","Home",new {id= item.maKhoahoc })"> <img src="~/Content/imageDankamusic/@item.hinhMinhhoa" style=" max-width: 70%;" alt="" /></a>
        <h2>@item.tenKhoahoc </h2>
        <div class="price-details">
            <div class="price-number">
                <p><span class="rupees">@Html.FormatValue(item.donGia, "{0:#,##0}") VNĐ
            </span></p>

            </div>
            <div class="add-cart">
                <h4>
                    <a style="background: darkmagenta;" href="@Url.Action("ThemGioHang","GioHang",new {ms = item.maKhoahoc,url = Request.Url.ToString()})" class="btn btn-primary" role="button">
                        <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true">

                        </span>
                        Add to Cart
                    </a>
                </h4>
            </div>
            <div class="clear"></div>
        </div>

    </div>
}


