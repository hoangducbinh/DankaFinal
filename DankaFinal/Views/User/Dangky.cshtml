



<div class="header_slide">
    <div class="header_bottom_left">
        <div class="categories">
            <ul>
                <h3 style="background: blueviolet; margin-top: 0px; ">Khóa học theo thể loại nhạc</h3>
                <li>@Html.Action("SubjectTheloai", "Home")</li>

            </ul>
        </div>
    </div>
    <div class="header_bottom_right">




        <div class="content_tent" style="height: 550px; background-color: darkorchid">

            <style type="text/css">
                tr {
                    height: 40px;
                }
            </style>

            <h4 style="color:white; text-align:center;">
                @ViewBag.ThongBao
            </h4>
            <div class="content_tent" style="height: 490px;background-color:white">
                <table align="center" style="margin-left:340px">
                    <h2 style="text-align: center; margin-bottom: 15px;"><b style="color:darkorchid"> ĐĂNG KÝ THÀNH VIÊN</b></h2>
                    
                    @using (Html.BeginForm("DangKy", "User"))
                    {
                        @Html.ValidationSummary(true)
                        <tr>
                            <td>Họ tên:</td>
                            <td>@Html.TextBox("HoTen") @ViewData["err1"]</td>
                        </tr>
                        <tr>
                            <td>Tên đăng nhập:</td>
                            <td>@Html.TextBox("TenDN") @ViewData["err2"]</td>
                        </tr>
                        <tr>
                            <td>Mật khẩu:</td>
                            <td>@Html.Password("MatKhau") @ViewData["err3"]</td>
                        </tr>
                        <tr>
                            <td>Mật khẩu nhập lại:</td>
                            <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td>@Html.TextBox("Email") @ViewData["err5"]</td>
                        </tr>
                        <tr>
                            <td>Điện thoại:</td>
                            <td>@Html.TextBox("DienThoai") @ViewData["err6"]</td>
                        </tr>
                        <tr>
                            <td>Ngày sinh:</td>
                            <td><input type="date" name="NgaySinh" /></td>
                        </tr>
                        <tr>
                            <td>Địa chỉ:</td>
                            <td><input type="text" name="DiaChi" /></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <input type="submit" value="Đăng ký" />
                                <input type="reset" value="Xóa Thông Tin" />
                            </td>
                        </tr>
                    }
                </table>






                <div>


                    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
                    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
                            async defer>
                    </script>


                    <form action="?" method="POST">
                        <div class="g-recaptcha" style=" margin-left:340px" data-sitekey="6LcikxsjAAAAADsOYELQz0-HCWvOJJiFeQSLspd1"></div>
                        <br />



                    </form>
                </div>


            </div>
            </div>





        </div>


    <div class="clear"></div>
</div>






































